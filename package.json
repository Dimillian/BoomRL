{
  "name": "boomrl",
  "version": "0.1.0",
  "description": "A browser-based roguelike Doom-style shooter",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx --report-unused-disable-directives --max-warnings 0"
  },
  "keywords": [
    "game",
    "roguelike",
    "doom",
    "browser",
    "threejs",
    "fps",
    "typescript"
  ],
  "author": "dimillian",
  "license": "MIT",
  "devDependencies": {
    "vite": "^5.0.0",
    "eslint": "^8.45.0",
    "typescript": "^5.0.0",
    "@types/three": "^0.158.0",
    "@types/node": "^20.0.0"
  },
  "dependencies": {
    "three": "^0.158.0",
    "howler": "^2.2.4"
  }
}
